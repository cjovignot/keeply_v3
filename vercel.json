{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "root": "frontend" }
    },
    {
      "src": "frontend/api/**/*.ts",
      "use": "@vercel/node",
      "config": { "root": "frontend/api" }
    }
  ],
  "routes": [{ "src": "frontend/api/(.*)", "dest": "frontend/api/$1.ts" }]
}
